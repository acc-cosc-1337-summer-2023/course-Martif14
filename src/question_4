int get_sales_commission(int x);
{
        if(0>499)
        {
                cout<<"5%";
        }
        else if(500>999)
        {
                cout<<"6";
        }
        else if(1000>1499)
        {
                cout<<"7%";
        }
        else if(1500>x)
        {
                cout<<"8%";
        }
        else if(x<0)
        {
                cout<<"0";
        }
        return 0
}